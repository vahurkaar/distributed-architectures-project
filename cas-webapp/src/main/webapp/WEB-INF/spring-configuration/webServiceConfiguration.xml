<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <description>
        Web service template configuration. The web service template is going to be connecting to the Core Application
    </description>

    <bean id="coreWebServiceClient" class="ee.ttu.CoreWebServiceClient">
        <property name="defaultUri" value="http://localhost:8088/core/customerService/"/>
        <property name="marshaller" ref="marshaller" />
        <property name="unmarshaller" ref="marshaller" />
    </bean>

    <bean id="marshaller" class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
        <property name="contextPath" value="ee.ttu.xml" />
    </bean>
</beans>
